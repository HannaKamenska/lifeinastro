{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["tests/*"]
    },
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": false,
    "allowJs": false,
    "types": ["vitest/globals"]
  },
  "include": ["src", "src/vite-env.d.ts", "tests", "e2e/critical-flow.spec.ts", "vitest.config.ts"]
}
